<body>
    <div class="container">
        <h1><i class="fas fa-crystal-ball icon"></i>Predict Next Month</h1>
        <p class="subtitle">Enter any month and discover what comes next with our advanced prediction algorithm</p>
        
        <div class="input-container">
            <input 
                type="text" 
                id="monthInput" 
                placeholder="Type a month name (e.g., January, February...)"
                autocomplete="off"
            />
        </div>
        
        <button class="predict-btn" onclick="predict()">
            <i class="fas fa-magic"></i> Predict Next Month
        </button>

        <div id="loading">
            <i class="fas fa-cog loading-icon"></i>
            <span id="loadingText"></span>
        </div>
        
        <div id="result"></div>
        
        <p class="footer-text">Powered by quantum computing and alien technology</p>
    </div>

    <script>
        // Month names array for validation and calculation
        const months = [
            "january", "february", "march", "april", "may", "june",
            "july", "august", "september", "october", "november", "december"
        ];

        // Fun loading messages as specified
        const loadingSteps = [
            "Contacting alien....",
            "Going physical with code....",
            "Quantum computing.....",
            "Asking Modi G.....",
            "Almost done....."
        ];

        // Add enter key functionality for better UX
        document.getElementById("monthInput").addEventListener("keypress", function(event) {
            if (event.key === "Enter") {
                predict();
            }
        });

        function predict() {
            // Get user input and normalize it
            let input = document.getElementById("monthInput").value.toLowerCase().trim();
            let index = months.indexOf(input);
            let resultBox = document.getElementById("result");
            let loadingBox = document.getElementById("loading");
            let loadingText = document.getElementById("loadingText");
            
            // Reset previous states
            resultBox.style.display = "none";
            resultBox.className = "";
            loadingBox.style.display = "none";

            // Validate input
            if (!input) {
                showError("Please enter a month name!");
                return;
            }

            if (index === -1) {
                showError("âŒ Invalid month name! Please enter a valid month (e.g., January, February, etc.)");
                return;
            }

            // Start loading sequence
            loadingBox.style.display = "block";
            
            // Cycle through funny loading texts every 2 seconds
            let step = 0;
            loadingText.innerHTML = loadingSteps[step];
            
            let interval = setInterval(() => {
                step++;
                if (step < loadingSteps.length) {
                    loadingText.innerHTML = loadingSteps[step];
                } else {
                    // Reset to first message for continuous loop
                    step = 0;
                    loadingText.innerHTML = loadingSteps[step];
                }
            }, 2000);

            // After 10 seconds, show the result
            setTimeout(() => {
                clearInterval(interval);
                loadingBox.style.display = "none";
                
                // Calculate next month (with wrap-around for December)
                let nextMonthIndex = (index + 1) % 12;
                let nextMonth = months[nextMonthIndex];
                
                // Capitalize first letter
                let capitalizedNextMonth = nextMonth.charAt(0).toUpperCase() + nextMonth.slice(1);
                
                // Show success result
                resultBox.innerHTML = `
                    <i class="fas fa-check-circle" style="color: #38a169; margin-right: 10px;"></i>
                    Next month is: <span class="next-month">${capitalizedNextMonth}</span>
                `;
                resultBox.className = "success";
                resultBox.style.display = "block";
                
                // Clear input for next use
                document.getElementById("monthInput").value = "";
                
            }, 10000); // 10 seconds as specified
        }

        function showError(message) {
            let resultBox = document.getElementById("result");
            resultBox.innerHTML = message;
            resultBox.className = "error";
            resultBox.style.display = "block";
            
            // Hide error after 5 seconds
            setTimeout(() => {
                resultBox.style.display = "none";
            }, 5000);
        }

        // Add some visual feedback when typing
        document.getElementById("monthInput").addEventListener("input", function() {
            let resultBox = document.getElementById("result");
            if (resultBox.style.display === "block") {
                resultBox.style.display = "none";
            }
        });
    </script>
</body>
